<mvc:View
    controllerName="bookshop.controller.BookDetail"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Page
        title="{title}"
        id="bookDetailPage">
        <content>
            <VBox>
                <Text text="{title}" class="sapUiSmallMarginBottom sapUiLargeMarginTop" />
                <Text text="{descr}" class="sapUiSmallMarginBottom" />
                <Text text="Author ID: {author_ID}" class="sapUiSmallMarginBottom" />
                <Text text="Stock: {stock}" class="sapUiSmallMarginBottom" />
                <Button text="Add to Cart" press="onAddToCartPress" />
            </VBox>
        </content>
    </Page>
</mvc:View>