<mvc:View
    controllerName="bookshop.controller.BookDetail"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Page
        title="Book Detail"
        id="bookDetailPage">
        <content>
            <VBox fitContainer="true">
                <!-- Bind the selectedBook properties to the view -->
                <Text text="{/selectedBook/title}" class="sapUiSmallMarginBottom" />
                <Text text="{/selectedBook/descrip}" class="sapUiSmallMarginBottom" />
                <Text text="Author ID: {/selectedBook/author_ID}" class="sapUiSmallMarginBottom" />
                <Text text="Stock: {/selectedBook/stock}" class="sapUiSmallMarginBottom" />
                <Button text="Add to Cart" press="onAddToCartPress" />
            </VBox>
        </content>
    </Page>
</mvc:View>
