<mvc:View
    controllerName="bookshop.controller.Main"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Page
        title="BookShop"
        id="mainPage">
        <content>
            <SearchField
                id="searchField"
                placeholder="Search for books..."
                liveChange="onSearch"
                width="50%" />
            <Button text="Create Book" press="onCreateBookPress" />
            <Button icon="sap-icon://sort" text="Sort by Price" press="onSortByPrice" />
            <Button icon="sap-icon://sort" text="Sort by Currency" press="onSortByCurrency" />
            <Table
                id="booksTable"
                items="{
                    path: '/value'
                }">
                <columns>
                    <Column>
                        <header>
                            <Text text="Title" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="Description" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="Price" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="Currency" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="Action" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{title}" />
                            <Text text="{descr}" />
                            <Text text="{price}" />
                            <Text text="{currency_code}" />
                            <HBox>
                             <RatingIndicator
                                    maxValue="3"
                                    value="{rating}"
                                    liveChange="onRatingChange" />
                                <Button text="Order" press="onOrderPress" />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>

    <Dialog
        id="orderDialog"
        title="Place Order"
        afterClose="onDialogClose">
        <content>
            <VBox>
                <Label text="Book Name" />
                <Input id="bookName" value="{/selectedBook/title}" editable="false" />
                <Label text="Quantity" />
                <Input id="quantity" type="Number" />
            </VBox>
        </content>
        <beginButton>
            <Button text="Submit" press="onSubmitOrder" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelOrder" />
        </endButton>
    </Dialog>

    <Dialog
        id="createBookDialog"
        title="Create Book"
        afterClose="onDialogClose">
        <content>
            <VBox>
                <Label text="Title" />
                <Input id="newBookTitle" />
                <Label text="Description" />
                <Input id="newBookDescription" />
                <Label text="Price" />
                <Input id="newBookPrice" type="Number" />
                <Label text="Currency" />
                <Input id="newBookCurrency" />
            </VBox>
        </content>
        <beginButton>
            <Button text="Create" press="onSubmitCreateBook" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCancelCreateBook" />
        </endButton>
    </Dialog>
</mvc:View>