<mvc:View
    controllerName="bookshop.controller.Main"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Page
        title="Books"
        id="mainPage">
        <content>
            <Table
                id="booksTable"
                items="{
                    path: '/value'
                }">
                <columns>
                    <Column>
                        <header>
                            <Text text="Title" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="Description" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="Price" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="Currency" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Text text="Action" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{title}" />
                            <Text text="{descr}" />
                            <Text text="{price}" />
                            <Text text="{currency_code}" />
                            <Button text="Order" press="onOrderPress" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>